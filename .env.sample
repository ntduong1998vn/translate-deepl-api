# Sample environment variables for deepl-api
# Copy this to .env and fill in the values before running the server.

# Required: your DeepL API authentication key
DEEPL_AUTH_KEY=your_deepl_api_key_here

# Server port (optional; defaults to 3000 if not set)
PORT=3000

# Node environment (optional)
NODE_ENV=development

# Optional: if you run a DeepL mock server for tests, set the mock server URL/port
# DEEPL_MOCK_SERVER_PORT=8080
# DEEPL_SERVER_URL=http://localhost:8080
